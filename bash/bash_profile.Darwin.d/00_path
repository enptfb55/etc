# osx system binaries
PATH=/usr/bin:/bin:/usr/sbin:/sbin

# x11 (xquartz) binaries
PATH=/opt/X11/bin:${PATH}

# homebrew binaries
PATH=/usr/local/bin:/usr/local/sbin:${PATH}

# prefer gnu coreutils over osx
PATH=/usr/local/opt/coreutils/libexec/gnubin:${PATH}

# prefer gnu findutils over osx
PATH=/usr/local/opt/findutils/libexec/gnubin:${PATH}

# home directory installations
PATH=${HOME}/local/bin:${PATH}

# custom scripts and binaries
PATH=${HOME}/bin:${PATH}

export PATH


# MANPATH
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# osx system man pages
MANPATH=/usr/share/man

# x11 (xquartz) man pages
MANPATH=/opt/x11/share/man:${MANPATH}

# homebrew man pages
MANPATH=/usr/local/share/man:${MANPATH}

# prefer gnu coreutils over osx
MANPATH=/usr/local/opt/coreutils/libexec/gnuman:${MANPATH}

# prefer gnu findutils over osx
MANPATH=/usr/local/opt/findutils/libexec/gnuman:${MANPATH}

# home dir app installations
MANPATH=${HOME}/local/share/man:${MANPATH}

export MANPATH
