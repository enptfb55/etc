# Filename:      etc/i3status/config
# Last modified: 2016.03.26


general {
    colors = true
    interval = 5
    output_format = "i3bar"
}

order += "disk /"
order += "disk /home"
order += "disk /var"
order += "ethernet _first_"
order += "load"
order += "tztime local"

ethernet _first_ {
    format_up = "eth0: %ip (%speed)"
    format_down = "eth0: down"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%1min"
}

disk "/" {
    format = "/: %free free (%percentage_used used)"
    low_threshold = 25
    prefix_type = binary
    threshold_type = percentage_avail
}

disk "/home" {
    format = "/home: %free free (%percentage_used used)"
    low_threshold = 25
    prefix_type = binary
    threshold_type = percentage_avail
}

disk "/var" {
    format = "/var: %free free (%percentage_used used)"
    low_threshold = 25
    prefix_type = binary
    threshold_type = percentage_avail
}
