# Filename:         ~/dotfiles/bash.d/aliases
# Last modified:    2013.08.14

alias acc='awk '\''{s+=$1} END {print s}'\'''   # Add up all numbers in a column
alias cp='cp -i'
alias df='df -h'
alias egrep='egrep --color=always --binary-files=without-match'
alias fgrep='fgrep --color=always --binary-files=without-match'
alias findx='find . -type f -print0 | xargs -0 grep --line-number --color=always --binary-files=without-match'
alias findxpy='find . -type f -and \( -name "*.py" -print0 \) | xargs -0 grep --line-number --color=always --binary-files=without-match'
alias findxcpp='find . -type f -and \( -name "*.cpp" -print0 -or -name "*.h" -print0 \) | xargs -0 grep --line-number --color=always --binary-files=without-match'
alias g='grep --line-number --color=always --binary-files=without-match'
alias gerp='grep --color=always --binary-files=without-match'
alias grep='grep --color=always --binary-files=without-match'
alias gv='gvim -geometry 140x85 -O'
alias gvim='gvim -geometry 140x85 -O'
alias ll='ls -lahF --group-directories-first'
alias l='ls --color=auto --group-directories-first'
alias loc='locate -d $HOME/mlocate.db'
alias lr='ls -latrh --color=auto --group-directories-first'
alias ls='ls --color=auto --group-directories-first'
alias m='time make'
alias mc='time make clean'
alias mi='time make install'
alias mount='mount | column -t'
alias mv='mv -i'
alias nsg='sudo netstat -anp | grep --line-number --color=always'
alias psg='ps -Lef | grep -v grep | grep --line-number --color=always'
alias rm_nfs='find . -name ".nfs*" -exec rm -f {} \;'
alias rm_orig='find . -name "*.orig" -exec rm -f {} \;'
alias sl='ls --color=auto --group-directories-first'
alias udb='updatedb -l 0 -o $HOME/mlocate.db -U $HOME'
alias vi='vim -O'
alias vim='vim -O'
alias vmi='vim -O'

