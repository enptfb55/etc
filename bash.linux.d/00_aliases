# Filename:         ~/dotfiles/bash.linux.d/00_aliases
# Last modified:    2016.02.15

alias acc='awk '\''{s+=$1} END {print s}'\'''   # Add up all numbers in a column
alias cp='cp --interactive'
alias dc='cd'
alias df='df --human-readable'
alias dul='du --human-readable --summarize * | sort --human-numeric-sort --reverse'
alias egrep='egrep --binary-files=without-match --color=always --directories=skip'
alias fgrep='fgrep --binary-files=without-match --color=always --directories=skip'
alias findx='find . -type d \( -name ".svn" -o -name ".git" \) -prune -o -type f -print0 | xargs -0 grep --binary-files=without-match --color=auto'
alias findxc='find . -type d \( -name ".svn" -o -name ".git" \) -prune -o -type f -and \( -name "*.cpp" -o -name "*.hpp" -o -name "*.c" -o -name "*.h" \) -print0 | xargs -0 grep --binary-files=without-match --color=auto'
alias findxpy='find . -type d \( -name ".svn" -o -name ".git" \) -prune -o -type f -and \( -name "*.py" \) -print0 | xargs -0 grep --binary-files=without-match --color=auto'
alias free='free --mega'
alias g='grep --binary-files=without-match --color=always --directories=skip --line-number'
alias gerp='grep --binary-files=without-match --color=always --directories=skip --line-number'
alias grep='grep --binary-files=without-match --color=always --directories=skip --line-number'
alias ll='ls -la --classify --color=auto --group-directories-first --human-readable'
alias l='ls --color=auto --group-directories-first'
alias loc='locate --database ${HOME}/local/cache/mlocate/mlocate.db'
alias lr='ls -lat --color=auto --group-directories-first --human-readable --reverse'
alias ls='ls --color=auto --group-directories-first'
alias lsof_net='lsof -P -i 4 -n'
alias m='make'
alias mc='make clean'
alias mcm='make clean && make'
alias mcmi='make clean && make install'
alias mdc='make distclean'
alias mi='make install'
alias mount='mount | column -t'
alias mp3_info='mediainfo --Output=file:///home/brian/bin/mp3_info'
alias mp3_infov='mediainfo --Output=file:///home/brian/bin/mp3_info_verbose'
alias mv='mv --interactive'
alias ns='netstat --numeric --tcp --all --udp --program --listening'
alias nsg='sudo netstat --all --numeric --program | grep --color=always --line-number'
alias psg='ps -Lef | grep --invert-match grep | grep --color=always --line-number'
alias psc='ps xawf -eo pid,user,cgroup,args'
alias rmdirr='find . -type d -empty -delete'
alias sl='ls --color=auto --group-directories-first'
alias udb='updatedb --require-visibility 0 --output ${HOME}/local/cache/mlocate/mlocate.db --database-root ${HOME}'
alias vi='vim -O'
alias vim='vim -O'
alias vmi='vim -O'
