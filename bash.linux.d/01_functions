# Filename:         ~/dotfiles/bash.linux.d/01_functions
# Last modified:    2016.02.15

# calculator
function ?()
{
    echo "$*" | bc --mathlib
}

# show bash colors
function colors()
{
    for i in {0..255}; do
        echo -e "\e[38;05;${i}m${i}"
    done | column -c 80 -s "  "
    echo -e "\e[m"
}
