! Filename:      ~/dotfiles/Xresources
! Last modified: 2016.02.23

! default size of new xterm window
Xterm*VT100.geometry: 165x59

! store 10,000 lines of buffer history
XTerm*saveLines: 10000

! set default background and foreground colors
XTerm*foreground: grey90
XTerm*background: grey25

! make cursor white
Xterm*cursorColor: white

! turn off scrollbars
XTerm*scrollBar: false
XTerm*rightScrollBar: false

! Xcursor.size: 0
! Xcursor.theme: neutral
! Xcursor.theme_core: 1
! Xft.antialias: 1
! Xft.dpi: 96
! Xft.hintstyle: hintfull
! Xft.rgba: rgb

! support all incoming data as utf-8
XTerm*locale: true

! enable utf-8 support in xterm
XTerm*utf8: true
